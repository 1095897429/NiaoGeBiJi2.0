<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/common_title_layout"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:background="@drawable/bg_blue"
        android:gravity="center"
        android:orientation="vertical">
        

        <com.qmkj.niaogebiji.module.widget.RCImageView
            android:id="@+id/icon"
            android:src="@mipmap/icon_about_logo"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:scaleType="fitXY"
            app:round_as_circle="false"
            app:round_corner="10dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <TextView
            android:text="鸟哥笔记"
            android:textSize="14sp"
            android:textColor="@color/text_first_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <LinearLayout
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_version_code"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/version_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当前版本"
                android:layout_centerVertical="true"
                android:textColor="@color/text_news_title_color"
                android:textSize="16dp" />



            <ImageView
                android:id="@+id/version_icon"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_my_right" />

            <TextView
                android:id="@+id/version_code"
                android:layout_toLeftOf="@+id/version_icon"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/setting_text_default"
                android:textSize="11sp"
                />




        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divider_line"/>

        <RelativeLayout
            android:id="@+id/rl_weixin"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信公众号"
                android:layout_centerVertical="true"
                android:textColor="@color/text_news_title_color"
                android:textSize="16dp" />



            <ImageView
                android:id="@+id/wx_icon"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_my_right" />

            <TextView
                android:id="@+id/wx_name"
                android:layout_toLeftOf="@+id/wx_icon"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/setting_text_default"
                android:textSize="11sp"
                />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divider_line"/>

        <RelativeLayout
            android:id="@+id/rl_hezuo"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商务合作"
                android:layout_centerVertical="true"
                android:textColor="@color/text_news_title_color"
                android:textSize="16dp" />



            <ImageView
                android:id="@+id/hezuo_icon"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_my_right" />

            <TextView
                android:id="@+id/hezuo_name"
                android:layout_toLeftOf="@+id/hezuo_icon"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/setting_text_default"
                android:textSize="11sp"
                />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divider_line"/>

    </LinearLayout>


    </LinearLayout>