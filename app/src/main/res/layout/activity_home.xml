<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/fragmentLayout"
                android:layout_width="match_parent"
                android:layout_above="@+id/part1111"
                android:layout_height="match_parent">

            </FrameLayout>

            <LinearLayout
                android:id="@+id/part1111"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:background="@color/divider_line"
                    android:layout_width="match_parent"
                    android:layout_height="1px"></View>

                <LinearLayout
                    android:id="@+id/bottom_ll"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="49dp">


                    <LinearLayout
                        android:id="@+id/index_first"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/index_first_icon"
                            android:src="@mipmap/icon_index_001"
                            android:layout_width="28dp"
                            android:layout_height="28dp" />

                        <TextView
                            android:id="@+id/index_first_text"
                            style="@style/index_text"
                            android:textColor="@color/text_news_title_color"
                            android:text="干货" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/index_tool"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/index_school_icon"
                            android:src="@mipmap/icon_index_10"
                            android:layout_width="28dp"
                            android:layout_height="28dp" />

                        <TextView
                            android:id="@+id/index_school_text"
                            style="@style/index_text"
                            android:text="学院" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/index_flash"
                        android:visibility="visible"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/index_flash_icon"
                            android:src="@mipmap/icon_index_00"
                            android:layout_width="28dp"
                            android:layout_height="28dp" />

                        <TextView
                            android:id="@+id/index_flash_text"
                            style="@style/index_text"
                            android:text="快讯" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/index_dynamic"
                        android:visibility="gone"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/index_dynamic_icon"
                            android:src="@mipmap/icon_index_00"
                            android:layout_width="28dp"
                            android:layout_height="28dp" />

                        <TextView
                            android:id="@+id/index_dynamic_text"
                            style="@style/index_text"
                            android:text="快讯" />

                    </LinearLayout>



                    <LinearLayout
                        android:id="@+id/index_circle"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_height="match_parent">


                        <RelativeLayout
                            android:id="@+id/rl_sign"
                            android:layout_width="34dp"
                            android:layout_height="30dp">

                            <ImageView
                                android:layout_centerInParent="true"
                                android:id="@+id/index_activity_icon"
                                android:src="@mipmap/icon_index_30"
                                android:layout_width="28dp"
                                android:layout_height="28dp" />

                            <FrameLayout
                                android:id="@+id/red_point"
                                android:visibility="gone"
                                android:layout_marginTop="2dp"
                                android:layout_marginLeft="18dp"
                                android:layout_centerVertical="true"
                                android:layout_alignParentTop="true"
                                android:background="@drawable/bg_white_point"
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_gravity="center"
                                    android:layout_width="8dp"
                                    android:layout_height="8dp"
                                    android:background="@drawable/bg_red_point"
                                    android:padding="0dp"
                                    android:textSize="12dp"
                                    android:visibility="visible" />
                            </FrameLayout>



                        </RelativeLayout>



                        <TextView
                            android:id="@+id/index_activity_text"
                            style="@style/index_text"
                            android:text="圈子" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/index_my"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/index_my_icon"
                            android:src="@mipmap/icon_index_40"
                            android:layout_width="28dp"
                            android:layout_height="28dp" />

                        <TextView
                            android:id="@+id/index_my_text"
                            style="@style/index_text"
                            android:text="我的" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/oldguide"
            android:orientation="vertical"
            android:gravity="bottom"
            android:background="#80000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">


            <LinearLayout
                android:id="@+id/part_img"
                android:layout_above="@+id/guide_img"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="16dp"
                android:gravity="right"
                android:layout_marginRight="@dimen/size_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/guide_num"
                    android:layout_above="@+id/guide_img"
                    android:layout_toLeftOf="@+id/skip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/size_12"
                    android:text="1/4"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_16" />


                <TextView
                    android:id="@+id/skip"
                    android:background="@drawable/bg_corners_22_stroke"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/size_14"
                    android:paddingTop="@dimen/size_5"
                    android:paddingRight="@dimen/size_14"
                    android:paddingBottom="@dimen/size_5"
                    android:text="跳过"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_14" />




            </LinearLayout>


            <TextView
                android:id="@+id/guide_text"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_above="@+id/part_img"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:text="欢迎加入鸟哥笔记，简单介绍一下我自己~
这里是干货快讯分享。每天智能推荐干货好文，记得常来看哦~"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            
            <Space
                android:layout_width="match_parent"
                android:layout_height="9dp" />


            <ImageView
                android:scaleType="centerCrop"
                android:layout_alignParentBottom="true"
                android:id="@+id/guide_img"
                android:src="@mipmap/icon_guide_1"
                android:layout_width="72dp"
                android:layout_height="95dp" />


        </LinearLayout>


    </RelativeLayout>


</LinearLayout>