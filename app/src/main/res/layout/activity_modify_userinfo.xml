<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#F5F5F5"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/myaccount"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/status_bar_height"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_height="54dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_common_left"
            android:layout_centerVertical="true"
            android:text="取消"
            android:textColor="@color/text_news_title_color"
            android:textSize="16sp"
            android:visibility="visible" />



        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/text_news_title_color"
            android:text="昵称"
            android:maxLength="20"
            android:singleLine="true"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="visible" />


        <TextView
            android:id="@+id/submit"
            android:text="保存"
            android:textSize="16dp"
            android:textColor="#CC818386"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:background="@drawable/bg_corners_6_selector"
            android:visibility="visible" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/bg_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <com.qmkj.niaogebiji.module.widget.ClearableEditText
            android:id="@+id/et_input"
            android:background="@null"
            android:hint="请输入昵称"
            android:singleLine="true"
            android:maxLines="1"
            android:maxLength="20"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColor="@color/text_news_title_color"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="62dp" />
    </LinearLayout>


</LinearLayout>