<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:background="#000000">



    <androidx.viewpager.widget.ViewPager
        android:paddingTop="@dimen/status_bar_height"
        android:id="@+id/imageBrowseViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />



    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:id="@+id/loading_progress"
        android:visibility="gone"/>


    <TextView
        android:visibility="gone"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingRight="16dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/pic_content"
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        android:lineSpacingExtra="2dp"
        android:text="我们提供防黑产程序，免费送1000条检测，我的服务好到爆炸，有需要的可以来撩我们提供防黑产程序，免…"
        android:layout_width="wrap_content"
        android:layout_height="80dp" />


    <RelativeLayout
        android:id="@+id/head_part"
        android:layout_marginTop="@dimen/status_bar_height"
        android:background="#B3000000"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <ImageView
            android:id="@+id/icon_preview_back"
            android:src="@mipmap/icon_preview_back"
            android:layout_centerVertical="true"
            android:layout_width="28dp"
            android:layout_height="28dp" />


        <TextView
            android:id="@+id/number_textview"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="17sp"
            android:textColor="#FFFFFF"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <ImageView
            android:id="@+id/icon_preview_download"
            android:layout_alignParentRight="true"
            android:src="@mipmap/icon_preview_download"
            android:layout_centerVertical="true"
            android:layout_width="28dp"
            android:layout_height="28dp" />


    </RelativeLayout>

</RelativeLayout>