<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <include layout="@layout/common_title_layout"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/bg_color"/>


        <LinearLayout
            android:id="@+id/part1"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/change_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="100dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="头像"
                    android:textColor="@color/text_news_title_color"
                    android:textSize="16dp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/head_icon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/icon_fenxiang"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_my_right" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divider_line"/>

            <LinearLayout
                android:id="@+id/change_nickname"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="昵称"
                    android:textColor="@color/text_news_title_color"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/setting_text_default"
                    android:textSize="16sp"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_my_right" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divider_line"/>

            <LinearLayout
                android:id="@+id/profile_info"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:gravity="center_vertical"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:text="个人简介"
                    android:textColor="@color/text_news_title_color"
                    android:textSize="16dp" />

                <Space
                    android:layout_width="10dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/profile_info_text"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text=""
                    android:singleLine="true"
                    android:gravity="center|right"
                    android:hint=""
                    android:textColor="@color/setting_text_default"
                    android:textSize="16sp"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_my_right" />

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divider_line"/>

        </LinearLayout>


        <View
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/bg_color"/>


        <LinearLayout
            android:id="@+id/part2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:orientation="vertical">



            <LinearLayout
                android:id="@+id/change_resetData"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="重置个性化数据"
                    android:textColor="@color/text_news_title_color"
                    android:textSize="16dp" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_my_right" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divider_line"/>


            <RelativeLayout
                android:id="@+id/push_ll"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="接受推送消息"
                    android:textColor="@color/text_news_title_color"
                    android:textSize="16dp" />


                <ImageView
                    android:id="@+id/open_push"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="53dp"
                    android:layout_height="36dp"
                    android:src="@mipmap/icon_push_open" />

                <TextView
                    android:id="@+id/push_tx"
                    android:layout_toLeftOf="@+id/open_push"
                    android:layout_marginRight="4dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已开启"
                    android:textColor="@color/setting_text_default"
                    android:textSize="11sp"
                    />


            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divider_line"/>

            <LinearLayout
                android:id="@+id/change_cache"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:gravity="center_vertical"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:text="清除缓存"
                    android:textColor="@color/text_news_title_color"
                    android:textSize="16dp" />

                <Space
                    android:layout_width="10dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/clean_text"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    android:text="当前缓存0.00KB"
                    android:textColor="@color/setting_text_default"
                    android:textSize="13sp"
                    />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_my_right" />

            </LinearLayout>



            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divider_line"/>



            <LinearLayout
                android:id="@+id/change_icon"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:gravity="center_vertical"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:text="动态改换桌面icon"
                    android:textColor="@color/text_news_title_color"
                    android:textSize="16dp" />

                    android:layout_height="match_parent" />




            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/exit_ll"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/exit_txt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="退出登录"
                android:textColor="#FF4D4F"
                android:textSize="16dp" />


        </LinearLayout>


    </LinearLayout>



</RelativeLayout>
