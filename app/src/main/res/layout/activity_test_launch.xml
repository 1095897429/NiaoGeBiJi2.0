<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/common_title_layout"/>

    <LinearLayout
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|bottom"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/current_page"
                android:text="1"
                android:textSize="32sp"
                android:textColor="@color/text_first_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/total"
                android:text=" /10"
                android:textSize="18sp"
                android:textColor="@color/text_first_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="6dp" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="@style/test_progress_horizontal"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:progress="50"
            android:max="100"/>

    </LinearLayout>

    <LinearLayout
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/test_title"
            android:text="CPC是一种广告计费方式。一般什么广告产品会使用这种计费方式？"
            android:textSize="16sp"
            android:textColor="@color/text_first_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1px"
            android:background="@color/divider_line"/>


        <LinearLayout
            android:id="@+id/ll_conent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler"
                android:overScrollMode="never"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </androidx.recyclerview.widget.RecyclerView>


        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <TextView
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:id="@+id/toNext"
            android:text="下一题"
            android:gravity="center"
            android:textSize="17sp"
            android:enabled="false"
            android:background="@drawable/bg_corners_12_selector_yellow"
            android:textColor="@color/text_first_color"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <TextView
            android:id="@+id/toSubmit"
            android:text="交卷"
            android:gravity="center"
            android:enabled="false"
            android:textSize="13sp"
            android:textColor="#5675A7"
            android:layout_width="match_parent"
            android:layout_height="50dp" />



    </LinearLayout>

</LinearLayout>