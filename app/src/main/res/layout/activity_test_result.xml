<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:overScrollMode="never"
        android:background="@drawable/bg_gradient_black"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/common_title_layout"/>

            <LinearLayout
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:id="@+id/part2222"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="284dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/icon_tag"
                        android:src="@mipmap/icon_result_1"
                        android:layout_width="126dp"
                        android:layout_height="126dp" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="10dp" />

                    <TextView
                        android:text="测试完成"
                        android:textSize="22sp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:text="你的分数"
                            android:textSize="13sp"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <Space
                            android:layout_width="4dp"
                            android:layout_height="match_parent" />

                        <TextView
                            android:id="@+id/test_grade"
                            android:text="100"
                            android:textSize="42sp"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>



                </LinearLayout>


                <Space
                    android:layout_width="match_parent"
                    android:layout_height="24dp" />


                <TextView
                    android:text="恭喜你获得鸟哥笔记认证『初级ASO优化师』称号。特授予你初级ASO优化师认证徽章，已帮你自动佩戴上"
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    android:layout_width="311dp"
                    android:gravity="center"
                    android:lineSpacingExtra="1dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="40dp" />

            <LinearLayout
                android:id="@+id/part3333"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/toShare"
                    android:text="分享好友"
                    android:gravity="center"
                    android:textSize="17sp"
                    android:background="@drawable/bg_corners_12_yellow"
                    android:textColor="@color/text_first_color"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="16dp" />


                <TextView
                    android:id="@+id/toTake"
                    android:visibility="gone"
                    android:text="立即佩戴"
                    android:gravity="center"
                    android:textSize="17sp"
                    android:background="@drawable/bg_corners_12_black"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />

            </LinearLayout>


        </LinearLayout>



    </androidx.core.widget.NestedScrollView>

</LinearLayout>