<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#99000000"
    android:paddingTop="@dimen/status_bar_height"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout

            android:background="@drawable/bg_corners_16_white"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <RelativeLayout
                    android:id="@+id/top_part"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="13dp"
                    android:paddingBottom="13dp"
                    android:background="@drawable/bg_corners_16_white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="取消"
                        android:gravity="center|left"
                        android:textColor="@color/text_first_color"
                        android:textSize="16sp" />


                    <TextView
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="转发动态"
                        android:textColor="@color/text_first_color"
                        android:textSize="17sp" />


                    <TextView
                        android:id="@+id/send"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center|right"
                        android:text="发布"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:background="@drawable/bg_corners_6_selector"
                        android:textColor="#CC818386"
                        android:textSize="16sp" />
                </RelativeLayout>

                <View
                    android:id="@+id/line1"
                    android:layout_below="@+id/top_part"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/divider_line"/>


                <EditText
                    android:padding="16dp"
                    android:layout_below="@+id/line1"
                    android:id="@+id/et_input"
                    android:gravity="left|top"
                    android:lineSpacingExtra="2dp"
                    android:minLines="2"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:background="@null"
                    android:hint=""
                    android:textColorHint="#AAAEB3"
                    android:textSize="16sp"
                    android:text="转发动态"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


                <LinearLayout
                    android:id="@+id/acticle_part"
                    android:visibility="visible"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="70dp">

                    <RelativeLayout
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:background="@drawable/bg_corners_8_gray"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/logo"
                            android:src="@mipmap/icon_link_logo"
                            android:layout_centerVertical="true"
                            android:layout_width="40dp"
                            android:layout_height="40dp" />


                        <LinearLayout
                            android:layout_marginLeft="8dp"
                            android:layout_toRightOf="@+id/logo"
                            android:layout_centerVertical="true"
                            android:layout_alignTop="@+id/logo"
                            android:layout_alignBottom="@+id/logo"
                            android:layout_toLeftOf="@+id/to_delete_link"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/acticle_title"
                                android:text=""
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:gravity="center|left"
                                android:textSize="14sp"
                                android:textColor="@color/text_first_color"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent" />


                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>


            <RelativeLayout
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <LinearLayout
                    android:id="@+id/ll_topic"
                    android:visibility="gone"
                    android:layout_marginLeft="16dp"
                    android:gravity="center"
                    android:layout_above="@+id/line2"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/select_topic_text"
                        android:background="@drawable/bg_corners_6_gray"
                        android:text="#我要找资源"
                        android:textSize="11sp"
                        android:paddingLeft="11dp"
                        android:paddingRight="11dp"
                        android:gravity="center"
                        android:textColor="@color/text_first_color"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp" />

                    <Space
                        android:layout_width="5dp"
                        android:layout_height="match_parent" />

                    <ImageView
                        android:id="@+id/topic_delete"
                        android:src="@mipmap/icon_topic_delete"
                        android:layout_width="28dp"
                        android:layout_height="28dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@color/white"
                    android:paddingRight="16dp"
                    android:paddingBottom="7dp"
                    android:paddingTop="7dp"
                    android:gravity="center|right"
                    android:layout_above="@+id/line2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/listentext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/text_second_color"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/140"
                        android:textColor="@color/text_second_color"
                        android:textSize="13sp" />

                </LinearLayout>


                <View
                    android:id="@+id/line2"
                    android:layout_above="@+id/bottom_part"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/divider_line"/>

                <LinearLayout
                    android:id="@+id/bottom_part"
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:gravity="center|left"
                    android:paddingLeft="16dp"
                    android:layout_height="50dp"
                    android:orientation="horizontal">


                    <CheckBox
                        android:id="@+id/checkbox"
                        android:gravity="center"
                        style="@style/CustomCheckBoxTheme"
                        android:padding="5dp"
                        android:checked="true"
                        android:background="@null"
                        android:text="同时评论"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />


                    <LinearLayout
                        android:layout_marginLeft="16dp"
                        android:id="@+id/link_topic"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/topic"
                            android:src="@mipmap/icon_topic"
                            android:layout_width="28dp"
                            android:layout_height="28dp" />

                    </LinearLayout>


                </LinearLayout>


            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>






</LinearLayout>