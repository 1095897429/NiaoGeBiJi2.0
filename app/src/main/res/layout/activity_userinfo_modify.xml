<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <include layout="@layout/common_title_layout"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/bg_color"/>


        <LinearLayout
            android:id="@+id/part1"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/change_head"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="100dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="头像"
                        android:textColor="@color/text_news_title_color"
                        android:textSize="16dp" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/head_icon"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginRight="10dp"
                        android:src="@mipmap/icon_fenxiang"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_my_right" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/divider_line"/>

                <LinearLayout
                    android:id="@+id/change_nickname"
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="昵称"
                        android:textColor="@color/text_news_title_color"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/setting_text_default"
                        android:textSize="16sp"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_my_right" />
                </LinearLayout>


            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/bg_color"/>

            <LinearLayout
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/profession_status"
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="职业状态"
                        android:textColor="@color/text_news_title_color"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/profession_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:gravity="right|center"
                        android:hint="请填写职位全称"
                        android:textColorHint="@android:color/holo_red_light"
                        android:textColor="@color/setting_text_default"
                        android:textSize="16sp"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_my_right" />
                </LinearLayout>



                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/divider_line"/>


                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/profession_other"
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="目前从事"
                        android:textColor="@color/text_news_title_color"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/profession_ohter_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="装修"
                        android:textColor="@color/setting_text_default"
                        android:textSize="16sp"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_my_right" />
                </LinearLayout>



                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/divider_line"/>



                <LinearLayout
                    android:visibility="visible"
                    android:id="@+id/ll_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/company_name_now"
                        android:layout_width="match_parent"
                        android:layout_height="62dp"
                        android:gravity="center_vertical"
                        android:background="@color/white">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center|left"
                            android:text="公司"
                            android:textColor="@color/text_news_title_color"
                            android:textSize="16dp" />

                        <Space
                            android:layout_width="10dp"
                            android:layout_height="match_parent" />

                        <TextView
                            android:id="@+id/company_name_now_text"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:hint="请填写公司全称"
                            android:textColorHint="@android:color/holo_red_light"
                            android:singleLine="true"
                            android:gravity="center|right"
                            android:textColor="@color/setting_text_default"
                            android:textSize="16sp"
                            />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/icon_my_right" />

                    </LinearLayout>


                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/company_name_old"
                        android:layout_width="match_parent"
                        android:layout_height="62dp"
                        android:gravity="center_vertical"
                        android:background="@color/white">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center|left"
                            android:text="前公司"
                            android:textColor="@color/text_news_title_color"
                            android:textSize="16dp" />

                        <Space
                            android:layout_width="10dp"
                            android:layout_height="match_parent" />

                        <TextView
                            android:id="@+id/company_name_old_text"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:text="上海宽娱互动网络有限公司"
                            android:singleLine="true"
                            android:gravity="center|right"
                            android:hint=""
                            android:textColor="@color/setting_text_default"
                            android:textSize="16sp"
                            />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/icon_my_right" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/divider_line"/>

                </LinearLayout>



                <LinearLayout
                    android:visibility="visible"
                    android:id="@+id/ll_profession"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:id="@+id/profession_name_now"
                        android:layout_width="match_parent"
                        android:layout_height="62dp"
                        android:gravity="center_vertical"
                        android:background="@color/white">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center|left"
                            android:text="职位"
                            android:textColor="@color/text_news_title_color"
                            android:textSize="16dp" />

                        <Space
                            android:layout_width="10dp"
                            android:layout_height="match_parent" />

                        <TextView
                            android:id="@+id/profession_name_now_text"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:text="产品经理"
                            android:singleLine="true"
                            android:gravity="center|right"
                            android:hint=""
                            android:textColor="@color/setting_text_default"
                            android:textSize="16sp"
                            />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/icon_my_right" />

                    </LinearLayout>


                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/profession_name_old"
                        android:layout_width="match_parent"
                        android:layout_height="62dp"
                        android:gravity="center_vertical"
                        android:background="@color/white">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center|left"
                            android:text="前职位"
                            android:textColor="@color/text_news_title_color"
                            android:textSize="16dp" />

                        <Space
                            android:layout_width="10dp"
                            android:layout_height="match_parent" />

                        <TextView
                            android:id="@+id/profession_name_old_text"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:text="产品经理"
                            android:singleLine="true"
                            android:gravity="center|right"
                            android:hint=""
                            android:textColor="@color/setting_text_default"
                            android:textSize="16sp"
                            />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/icon_my_right" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/divider_line"/>

                </LinearLayout>




                <LinearLayout
                    android:id="@+id/profile_info"
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:gravity="center_vertical"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:text="个人简介"
                        android:textColor="@color/text_news_title_color"
                        android:textSize="16dp" />

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/profile_info_text"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text=""
                        android:singleLine="true"
                        android:gravity="center|right"
                        android:hint=""
                        android:textColor="@color/setting_text_default"
                        android:textSize="16sp"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_my_right" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/divider_line"/>

            </LinearLayout>












        </LinearLayout>


        <View
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/bg_color"/>



        <LinearLayout
            android:id="@+id/exit_ll"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/exit_txt"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="退出登录"
                android:textColor="#FF4D4F"
                android:textSize="16dp" />


            <TextView
                android:id="@+id/submit"
                android:text="完成"
                android:textSize="17dp"
                android:textColor="@color/text_first_color"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/bg_corners_6_selector"
                android:visibility="visible" />



        </LinearLayout>


        <LinearLayout
            android:id="@+id/part2"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:orientation="vertical">



            <LinearLayout
                android:id="@+id/change_resetData"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="重置个性化数据"
                    android:textColor="@color/text_news_title_color"
                    android:textSize="16dp" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_my_right" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divider_line"/>


            <RelativeLayout
                android:id="@+id/push_ll"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="接受推送消息"
                    android:textColor="@color/text_news_title_color"
                    android:textSize="16dp" />


                <ImageView
                    android:id="@+id/open_push"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="53dp"
                    android:layout_height="36dp"
                    android:src="@mipmap/icon_push_open" />

                <TextView
                    android:id="@+id/push_tx"
                    android:layout_toLeftOf="@+id/open_push"
                    android:layout_marginRight="4dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已开启"
                    android:textColor="@color/setting_text_default"
                    android:textSize="11sp"
                    />


            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divider_line"/>

            <LinearLayout
                android:id="@+id/change_cache"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:gravity="center_vertical"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:text="清除缓存"
                    android:textColor="@color/text_news_title_color"
                    android:textSize="16dp" />

                <Space
                    android:layout_width="10dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/clean_text"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    android:text="当前缓存20M"
                    android:textColor="@color/setting_text_default"
                    android:textSize="16sp"
                    />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_my_right" />

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divider_line"/>

        </LinearLayout>


    </LinearLayout>



</RelativeLayout>
