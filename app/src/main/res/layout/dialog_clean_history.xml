<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_corners_12">


    <TextView
        android:id="@+id/txt_msg"
        android:paddingTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="清理搜索记录"
        android:textColor="@color/text_first_color"
        android:textSize="17sp"
        android:gravity="center" />
    

    <Space
        android:layout_width="match_parent"
        android:layout_height="16dp" />


    <TextView
        android:id="@+id/txt_title"
        android:text="注意啦"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:visibility="visible"
        android:textColor="@color/text_second_color"
        android:textSize="13sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        />


    <LinearLayout
        android:layout_marginTop="32dp"
        android:layout_marginBottom="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_neg"
            android:layout_width="110dp"
            android:layout_height="44dp"
            android:background="@drawable/bg_corners_10_gray"
            android:text="取消"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/text_first_color"
            android:textSize="13sp" />

        <Space
            android:layout_width="20dp"
            android:layout_height="match_parent" />


        <TextView
            android:id="@+id/btn_pos"
            android:layout_width="110dp"
            android:layout_height="44dp"
            android:textStyle="bold"
            android:text="清理"
            android:gravity="center"
            android:background="@drawable/bg_corners_10_yellow"
            android:textColor="@color/text_news_title_color"
            android:textSize="14sp" />
    </LinearLayout>


</LinearLayout>