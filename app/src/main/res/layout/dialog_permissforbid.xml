<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="265dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/bg_corners_12">



    <ImageView
        android:src="@mipmap/icon_permission_ask_sdcard"
        android:scaleType="centerCrop"
        android:layout_width="265dp"
        android:visibility="visible"
        android:layout_height="116dp" />

    <TextView
        android:id="@+id/txt_title"
        android:paddingRight="20dp"
        android:paddingTop="22dp"
        android:lineSpacingExtra="2dp"
        android:layout_width="221dp"
        android:layout_height="wrap_content"
        android:text="鸟哥笔记需要获得以上权限，才可以正常使用"
        android:textColor="@color/text_first_color"
        android:textSize="17sp"
        android:gravity="center|left" />


    <TextView
        android:id="@+id/txt_msg"
        android:layout_marginTop="8dp"
        android:layout_width="221dp"
        android:layout_height="wrap_content"
        android:text=" 获取权限后\n
鸟哥笔记不会读取您的个人信息\n
请在权限管理中设置开启"
        android:textColor="#818386"
        android:textSize="13sp"
        android:gravity="center|left" />




    <LinearLayout
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/exit"
            android:layout_width="104dp"
            android:layout_height="44dp"
            android:background="@drawable/bg_corners_10_gray"
            android:text="退出"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/text_first_color"
            android:textSize="13sp" />

        <Space
            android:layout_width="12dp"
            android:layout_height="match_parent" />


        <TextView
            android:id="@+id/gotoSetting"
            android:layout_width="104dp"
            android:layout_height="44dp"
            android:textStyle="bold"
            android:text="前往设置"
            android:gravity="center"
            android:background="@drawable/bg_corners_10_yellow"
            android:textColor="@color/text_news_title_color"
            android:textSize="14sp" />
    </LinearLayout>


</LinearLayout>