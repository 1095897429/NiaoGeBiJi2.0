<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/dialog_share_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/title"
        android:text="分享资讯"
        android:gravity="center"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/text_news_title_color"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/share_circle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center|right"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:src="@mipmap/icon_share_circle"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <TextView
                android:text="朋友圈"
                android:textSize="13sp"
                android:gravity="center|right"
                android:padding="8dp"
                android:textColor="@color/text_second_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/share_friend"
            android:layout_marginLeft="75dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:src="@mipmap/icon_share_weixin"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <TextView
                android:text="微信好友"
                android:textSize="13sp"
                android:gravity="center|left"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textColor="@color/text_second_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_line"></View>


    <TextView
        android:id="@+id/cancel"
        android:text="取消"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/text_first_color"
        android:layout_width="match_parent"
        android:layout_height="50dp" />





</LinearLayout>