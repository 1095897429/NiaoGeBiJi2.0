<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/dialog_share_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/title"
        android:text="分享快讯"
        android:gravity="center"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/text_news_title_color"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/share_poster"
            android:background="@mipmap/bg_flash_share_1"
            android:layout_width="0dp"
            android:layout_height="172dp"
            android:layout_weight="1"
            android:paddingLeft="15dp"
            android:paddingRight="23dp"
            android:paddingTop="22dp"
            android:orientation="vertical">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:text="海报分享"
            android:textColor="@color/white"
            android:textSize="17sp"
            />

        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <LinearLayout
            android:id="@+id/poster_wx"
            android:background="@drawable/bg_corners_8_white"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            
            <ImageView
                android:src="@mipmap/icon_flash_share_wx"
                android:layout_width="38dp"
                android:layout_height="38dp" />

            <TextView
                android:gravity="center|left"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="微信好友"
                android:textColor="@color/text_first_color"
                android:textSize="13sp"
                />
            
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <LinearLayout
                android:id="@+id/poster_circle"
                android:background="@drawable/bg_corners_8_white"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@mipmap/icon_flash_share_circle"
                    android:layout_width="38dp"
                    android:layout_height="38dp" />

                <TextView
                    android:gravity="center|left"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="到朋友圈"
                    android:textColor="@color/text_first_color"
                    android:textSize="13sp"
                    />

            </LinearLayout>

        </LinearLayout>

        <Space
            android:layout_width="7dp"
            android:layout_height="match_parent" />



        <LinearLayout
            android:id="@+id/share_link"
            android:background="@mipmap/bg_share_flash_2"
            android:layout_width="0dp"
            android:layout_height="172dp"
            android:layout_weight="1"
            android:paddingLeft="15dp"
            android:paddingRight="23dp"
            android:paddingTop="22dp"
            android:orientation="vertical">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:text="链接分享"
                android:textColor="@color/white"
                android:textSize="17sp"
                />

            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp" />

            <LinearLayout
                android:id="@+id/link_wx"
                android:background="@drawable/bg_corners_8_white"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@mipmap/icon_flash_share_wx"
                    android:layout_width="38dp"
                    android:layout_height="38dp" />

                <TextView
                    android:gravity="center|left"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="微信好友"
                    android:textColor="@color/text_first_color"
                    android:textSize="13sp"
                    />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp" />

            <LinearLayout
                android:id="@+id/link_circle"
                android:background="@drawable/bg_corners_8_white"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@mipmap/icon_flash_share_circle"
                    android:layout_width="38dp"
                    android:layout_height="38dp" />

                <TextView
                    android:gravity="center|left"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="到朋友圈"
                    android:textColor="@color/text_first_color"
                    android:textSize="13sp"
                    />

            </LinearLayout>

        </LinearLayout>




    </LinearLayout>

    <View
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_line"></View>


    <TextView
        android:id="@+id/cancel"
        android:text="取消"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/text_first_color"
        android:layout_width="match_parent"
        android:layout_height="50dp" />





</LinearLayout>