<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/dialog_share_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/title"
        android:visibility="visible"
        android:text="分享文章"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/text_news_title_color"
        android:paddingTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="26dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/share_dynamic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:src="@mipmap/icon_share_dynamic"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <TextView
                android:id="@+id/share_dynamic_text"
                android:text="转发到动态"
                android:textSize="13sp"
                android:gravity="center"
                android:padding="8dp"
                android:textColor="@color/text_second_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/share_circle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:src="@mipmap/icon_share_circle"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <TextView
                android:text="朋友圈"
                android:textSize="13sp"
                android:gravity="center"
                android:padding="8dp"
                android:textColor="@color/text_second_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/share_friend"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:src="@mipmap/icon_share_weixin"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <TextView
                android:text="微信好友"
                android:textSize="13sp"
                android:gravity="center"
                android:padding="8dp"
                android:textColor="@color/text_second_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/share_copy_link"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:src="@mipmap/icon_share_copy_link"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <TextView
                android:text="复制链接"
                android:textSize="13sp"
                android:gravity="center"
                android:padding="8dp"
                android:textColor="@color/text_second_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divider_line"></View>


        <TextView
            android:id="@+id/cancel"
            android:text="取消"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/text_first_color"
            android:layout_width="match_parent"
            android:layout_height="50dp" />


    </LinearLayout>



</LinearLayout>