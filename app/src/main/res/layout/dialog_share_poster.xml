<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"

    android:background="@drawable/dialog_share_bg"
    android:paddingBottom="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/title"
        android:text="分享海报"
        android:gravity="center"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/text_news_title_color"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/share_circle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:src="@mipmap/icon_share_circle"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <TextView
                android:text="朋友圈"
                android:textSize="13sp"
                android:gravity="center"
                android:padding="8dp"
                android:textColor="@color/text_second_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/share_friend"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:src="@mipmap/icon_share_weixin"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <TextView
                android:text="微信好友"
                android:textSize="13sp"
                android:gravity="center"
                android:padding="8dp"
                android:textColor="@color/text_second_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/share_save_pic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:src="@mipmap/icon_share_poster"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <TextView
                android:text="保存图片"
                android:textSize="13sp"
                android:gravity="center"
                android:padding="8dp"
                android:textColor="@color/text_second_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </LinearLayout>



</LinearLayout>