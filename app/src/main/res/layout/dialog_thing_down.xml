<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_corners_12">


    <TextView
        android:id="@+id/txt_title"
        android:text="注意啦"
        android:visibility="gone"
        android:textColor="#222222"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        />

    <ImageView
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="0.5dp"
        android:background="#c6c6c6" />

    <TextView
        android:id="@+id/txt_msg"
        android:paddingTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确认消耗100羽毛兑换商品？"
        android:textColor="@color/text_first_color"
        android:textSize="18sp"
        android:gravity="center" />


    <LinearLayout
        android:layout_marginTop="32dp"
        android:layout_marginBottom="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_neg"
            android:layout_width="110dp"
            android:layout_height="44dp"
            android:background="@drawable/bg_corners_10_gray"
            android:text="再想想"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/text_first_color"
            android:textSize="13sp" />

        <Space
            android:layout_width="20dp"
            android:layout_height="match_parent" />


        <TextView
            android:id="@+id/btn_pos"
            android:layout_width="110dp"
            android:layout_height="44dp"
            android:textStyle="bold"
            android:text="兑换"
            android:gravity="center"
            android:background="@drawable/bg_corners_10_yellow"
            android:textColor="@color/text_news_title_color"
            android:textSize="13sp" />
    </LinearLayout>


</LinearLayout>