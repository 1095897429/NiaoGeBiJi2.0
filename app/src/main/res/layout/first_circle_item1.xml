<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="20dp"
    android:paddingBottom="12dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/part1111"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/head_icon"
            android:layout_centerVertical="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/icon_fenxiang"/>

        <LinearLayout
            android:layout_marginLeft="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignTop="@+id/head_icon"
            android:layout_toRightOf="@+id/head_icon"
            android:orientation="vertical">

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">

                   <TextView
                       android:id="@+id/sender_name"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:ellipsize="end"
                       android:lineSpacingExtra="2dp"
                       android:maxLines="1"
                       android:text="张俊杰"
                       android:textColor="@color/text_first_color"
                       android:textSize="16sp" />

                   <Space
                       android:layout_width="8dp"
                       android:layout_height="match_parent" />

                   <ImageView
                       android:background="#D8D8D8"
                       android:layout_width="28dp"
                       android:layout_height="20dp" />

                   <Space
                       android:layout_width="4dp"
                       android:layout_height="match_parent" />

                   <ImageView
                       android:background="#D8D8D8"
                       android:layout_width="28dp"
                       android:layout_height="20dp" />

               </LinearLayout>

               <LinearLayout
                   android:id="@+id/ll_report"
                   android:gravity="center"
                   android:layout_alignParentRight="true"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">

                   <TextView
                       android:id="@+id/publish_time"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:ellipsize="end"
                       android:lineSpacingExtra="2dp"
                       android:maxLines="1"
                       android:text="15分钟前"
                       android:textColor="#AAAEB3"
                       android:textSize="11sp" />

                   <Space
                       android:layout_width="8dp"
                       android:layout_height="match_parent" />


                   <ImageView
                       android:visibility="visible"
                       android:id="@+id/circle_report"
                       android:src="@mipmap/icon_circle_report"
                       android:layout_width="16dp"
                       android:layout_height="16dp" />

                   <ImageView
                       android:id="@+id/circle_remove"
                       android:visibility="gone"
                       android:src="@mipmap/icon_circle_remove"
                       android:layout_width="16dp"
                       android:layout_height="16dp" />


               </LinearLayout>

           </RelativeLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="4dp" />


            <TextView
                android:id="@+id/sender_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:drawableRight="@mipmap/icon_authen_company"
                android:drawablePadding="4dp"
                android:lineSpacingExtra="2dp"
                android:maxLines="1"
                android:text="上海青墨网络科技有限公司产品经理"
                android:textColor="#AAAEB3"
                android:textSize="13sp" />


        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:layout_marginTop="8dp"
        android:layout_below="@+id/part1111"
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lineSpacingExtra="2dp"
        android:maxLines="3"
        android:text="10月31日，格力电器公告拟修订公司章程，其中，
        经营范围新增了「研发、制造、销售新能源发电产品、储能系统及充电桩」的内容。"
        android:textColor="@color/text_first_color"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/part2222"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_below="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="84dp">


        <com.qmkj.niaogebiji.module.widget.RCImageView
            android:id="@+id/one_img_imgs"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="84dp"
            android:scaleType="centerCrop"
            android:background="@color/bg_color"
            app:round_as_circle="false"
            app:round_corner="6dp" />

        <Space
            android:layout_width="8dp"
            android:layout_height="match_parent" />

        <com.qmkj.niaogebiji.module.widget.RCImageView
            android:id="@+id/two_img_imgs"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="84dp"
            android:scaleType="centerCrop"
            android:background="@color/bg_color"
            app:round_as_circle="false"
            app:round_corner="6dp" />

        <Space
            android:layout_width="8dp"
            android:layout_height="match_parent" />

        <com.qmkj.niaogebiji.module.widget.RCImageView
            android:id="@+id/three_img_imgs"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="84dp"
            android:scaleType="centerCrop"
            android:background="@color/bg_color"
            app:round_as_circle="false"
            app:round_corner="6dp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/part3333"
        android:layout_below="@+id/part2222"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="40dp"
        android:orientation="horizontal">


        <LinearLayout
            android:visibility="visible"
            android:gravity="center"
            android:id="@+id/circle_share"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="20dp"
            android:orientation="horizontal">

            <ImageView
                android:src="@mipmap/icon_flash_share"
                android:layout_width="20dp"
                android:layout_height="20dp" />

            <Space
                android:layout_width="8dp"
                android:layout_height="match_parent" />


            <TextView
                android:id="@+id/share"
                android:text="分享"
                android:textSize="13sp"
                android:textColor="#555962"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />


        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:visibility="visible"
            android:id="@+id/circle_comment"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="20dp"
            android:orientation="horizontal">

            <ImageView
                android:src="@mipmap/icon_flash_comment"
                android:layout_width="20dp"
                android:layout_height="20dp" />

            <Space
                android:layout_width="8dp"
                android:layout_height="match_parent" />


            <TextView
                android:id="@+id/comment"
                android:text="评论"
                android:textSize="13sp"
                android:textColor="#555962"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />


        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:visibility="visible"
            android:id="@+id/circle_priase"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="20dp"
            android:orientation="horizontal">

            <ImageView
                android:src="@mipmap/icon_flash_priase"
                android:layout_width="20dp"
                android:layout_height="20dp" />

            <Space
                android:layout_width="8dp"
                android:layout_height="match_parent" />


            <TextView
                android:id="@+id/zan_num"
                android:text="99+"
                android:textSize="13sp"
                android:textColor="#555962"
                android:gravity="center"
                android:layout_width="25dp"
                android:layout_height="match_parent" />


        </LinearLayout>



    </LinearLayout>



</RelativeLayout>