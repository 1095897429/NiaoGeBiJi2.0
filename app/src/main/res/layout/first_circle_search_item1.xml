<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/item_ys_pic"
    android:layout_width="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="20dp"
    android:paddingBottom="12dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/part1111"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:drawablePadding="4dp"
            android:lineSpacingExtra="2dp"
            android:maxLines="1"
            android:text=""
            android:textColor="#AAAEB3"
            android:textSize="13sp" />
    </RelativeLayout>

    <TextView
        android:layout_marginTop="8dp"
        android:layout_below="@+id/part1111"
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lineSpacingExtra="2dp"
        android:maxLines="3"
        android:textColor="@color/text_first_color"
        android:textSize="16sp" />


    <LinearLayout
        android:id="@+id/part2222"
        android:visibility="visible"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        android:layout_below="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/ll_pic_3"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="109dp"
            android:orientation="horizontal">

            <com.qmkj.niaogebiji.module.widget.RCImageView
                android:id="@+id/one_img_imgs"
                android:layout_width="109dp"
                android:layout_height="109dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:background="@color/bg_color"
                app:round_as_circle="false"
                app:round_corner="8dp" />

            <Space
                android:layout_width="8dp"
                android:layout_height="match_parent" />



            <com.qmkj.niaogebiji.module.widget.RCImageView
                android:id="@+id/two_img_imgs"
                android:layout_width="109dp"
                android:layout_height="109dp"
                android:layout_weight="1"
                android:visibility="visible"
                android:scaleType="centerCrop"
                android:background="@color/bg_color"
                app:round_as_circle="false"
                app:round_corner="8dp" />

            <Space
                android:layout_width="8dp"
                android:layout_height="match_parent" />


            <com.qmkj.niaogebiji.module.widget.RCImageView
                android:id="@+id/three_img_imgs"
                android:layout_width="109dp"
                android:layout_height="109dp"
                android:visibility="visible"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:background="@color/bg_color"
                app:round_as_circle="false"
                app:round_corner="8dp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_pic_2"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="109dp"
            android:orientation="horizontal">

            <com.qmkj.niaogebiji.module.widget.RCImageView
                android:id="@+id/one_img_imgs_2"
                android:layout_width="109dp"
                android:layout_height="109dp"
                android:scaleType="centerCrop"
                android:background="@color/bg_color"
                app:round_as_circle="false"
                app:round_corner="8dp" />

            <Space
                android:layout_width="8dp"
                android:layout_height="match_parent" />



            <com.qmkj.niaogebiji.module.widget.RCImageView
                android:id="@+id/two_img_imgs_2"
                android:layout_width="109dp"
                android:layout_height="109dp"
                android:visibility="visible"
                android:scaleType="centerCrop"
                android:background="@color/bg_color"
                app:round_as_circle="false"
                app:round_corner="8dp" />


        </LinearLayout>


    </LinearLayout>




</RelativeLayout>