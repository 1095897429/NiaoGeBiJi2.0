<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:layout_height="316dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/one_img_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lineSpacingExtra="2dp"
                android:maxLines="2"
                android:text="@string/test"
                android:textColor="@color/text_news_title_color"
                android:textSize="17sp" />

            <LinearLayout
                android:id="@+id/part1111"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_below="@+id/one_img_title"
                android:layout_width="match_parent"
                android:layout_height="212dp">



                <com.qmkj.niaogebiji.module.widget.RCImageView
                    android:id="@+id/long_img_imgs"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:background="@color/bg_color"
                    app:round_as_circle="false"
                    app:round_corner="6dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/top"
                    android:background="@drawable/bg_corners_3_gray"
                    android:visibility="gone"
                    android:layout_marginRight="8dp"
                    android:layout_width="34dp"
                    android:layout_height="16dp"
                    android:textColor="#FFBA20"
                    android:gravity="center"
                    android:text="置顶"
                    android:textSize="11sp" />


                <TextView
                    android:id="@+id/one_img_auth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/text_news_tag_color"
                    android:text="奋斗的小胖子"
                    android:textSize="11sp" />

                <Space
                    android:layout_width="8dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/one_img_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="2019.9.23"
                    android:textColor="@color/text_news_tag_color"
                    android:textSize="11sp" />
            </LinearLayout>


        </RelativeLayout>






    </LinearLayout>




</RelativeLayout>