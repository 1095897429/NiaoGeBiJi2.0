<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/bg_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <LinearLayout
                android:id="@+id/part1111"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="16dp"
                android:paddingBottom="8dp"
                android:background="@drawable/bg_corners_12"
                android:orientation="vertical">


                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="104dp"
                        android:layout_height="35dp"
                        android:src="@mipmap/icon_new_vovice"/>

                    <TextView
                        android:text="新手任务"
                        android:textSize="17sp"
                        android:layout_gravity="bottom"
                        android:textStyle="bold"
                        android:textColor="@color/text_news_title_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </FrameLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/newuser_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:overScrollMode="never"
                    android:scrollbars="none"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/part2222"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="16dp"
                android:paddingBottom="20dp"
                android:background="@drawable/bg_corners_12"
                android:orientation="vertical">



                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="104dp"
                        android:layout_height="35dp"
                        android:src="@mipmap/icon_feather_vovice2"/>

                    <TextView
                        android:text="日常任务"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_gravity="bottom"
                        android:textColor="@color/text_news_title_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </FrameLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/day_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/to_exchange"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="41dp"
                android:layout_width="match_parent"
                android:background="@drawable/bg_corners_12"
                android:layout_height="50dp"
                android:gravity="center"
                android:orientation="horizontal">



                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/text_first_color"
                    android:layout_marginRight="4dp"
                    android:text="羽毛兑换好礼"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:src="@mipmap/icon_to_exchange"
                    android:layout_width="18dp"
                    android:layout_height="18dp" />


            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>