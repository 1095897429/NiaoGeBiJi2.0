<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/bg_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.qmkj.niaogebiji.module.widget.MyNestedScrollView
        android:id="@+id/scrollView"
        android:scrollbars="none"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:visibility="visible"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/part2222"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/bg_corners_12"
                android:orientation="vertical">

                <RelativeLayout
                    android:background="@mipmap/bg_rank_feather"
                    android:layout_width="match_parent"
                    android:layout_height="59dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/head_icon"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_marginLeft="24dp"
                        android:src="@mipmap/icon_fenxiang"
                        android:layout_centerVertical="true" />


                    <LinearLayout
                        android:id="@+id/my_rank"
                        android:layout_centerVertical="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:orientation="vertical"
                        android:layout_toRightOf="@+id/head_icon">


                        <TextView
                            android:id="@+id/name"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="我的排名"
                            android:textColor="@color/text_news_title_color"
                            android:textSize="11dp" />


                        <TextView
                            android:id="@+id/name_tag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2000"
                            android:textColor="@color/text_first_color"
                            android:textSize="18sp" />

                    </LinearLayout>

                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:orientation="horizontal">

                    <TextView
                        android:text="排名"
                        android:textSize="13sp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="@color/send_color_default"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="昵称"
                        android:textSize="13sp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="@color/send_color_default"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="羽毛"
                        android:textSize="13sp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="@color/send_color_default"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />


                </LinearLayout>




                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rank_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"/>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <include
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        layout="@layout/empty_layout"></include>


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/to_exchange"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="41dp"
                android:layout_width="match_parent"
                android:background="@drawable/bg_corners_10"
                android:layout_height="50dp"
                android:gravity="center"
                android:orientation="horizontal">



                <TextView
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_first_color"
                    android:layout_marginRight="4dp"
                    android:text="羽毛兑换好礼"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:src="@mipmap/icon_to_exchange"
                    android:layout_width="18dp"
                    android:layout_height="18dp" />


            </LinearLayout>

        </LinearLayout>

    </com.qmkj.niaogebiji.module.widget.MyNestedScrollView>





</LinearLayout>