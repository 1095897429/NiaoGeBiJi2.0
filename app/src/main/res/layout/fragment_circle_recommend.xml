<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_show"
        android:background="#FFDC00"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/showSendMsg"
            android:visibility="gone"
            android:text="发布成功，已经推荐给10000位营销圈同行"
            android:gravity="center"
            android:textSize="13sp"
            android:textColor="@color/text_first_color"
            android:layout_width="match_parent"
            android:layout_height="36dp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/allpart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/common_refresh"/>


        <ImageView
            android:id="@+id/backtop"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:scaleType="centerCrop"
            android:layout_marginRight="16dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="66dp"
            android:src="@mipmap/icon_back_top"
            android:visibility="gone" />

    </LinearLayout>



</LinearLayout>