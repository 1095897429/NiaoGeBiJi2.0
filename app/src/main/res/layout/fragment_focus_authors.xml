<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/common_refresh"/>

    <LinearLayout
        android:id="@+id/ll_empty"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_empty"
            android:layout_width="144dp"
            android:layout_height="144dp"
            android:background="@mipmap/icon_empty_author" />

        <TextView
            android:id="@+id/tv_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="13sp"
            android:text="您还没有关注的作者哦，看看推荐关注～"
            android:textColor="#A6A6A6" />


        <TextView
            android:id="@+id/to_authorlist"
            android:layout_width="160dp"
            android:layout_height="46dp"
            android:gravity="center"
            android:background="@drawable/bg_corners_10_gray_line"
            android:layout_marginTop="16dp"
            android:textSize="13sp"
            android:text="查看推荐作者"
            android:textColor="#818386" />

    </LinearLayout>

</RelativeLayout>