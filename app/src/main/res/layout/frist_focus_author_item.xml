<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bg_corners_6_white"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:layout_marginLeft="8dp"
    android:layout_width="106dp"
    android:layout_height="178dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/head_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/icon_fenxiang"/>

    <TextView
        android:id="@+id/name"
        android:text="笑笑笑"
        android:textSize="13sp"
        android:textColor="@color/text_news_title_color"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/head_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tag"
        android:text="影响力 20.1w"
        android:textSize="11sp"
        android:textColor="@color/text_news_tag_color"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@+id/name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <TextView
        android:id="@+id/focus"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tag"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="13sp"
        android:textColor="@color/text_news_title_color"
        android:gravity="center"
        android:text="关注"
        android:textStyle="bold"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:background="@drawable/bg_corners_6_yellow"
        android:layout_width="64dp"
        android:layout_height="26dp" />

    <TextView
        android:id="@+id/focus_aleady"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tag"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="13sp"
        android:textColor="#818386"
        android:gravity="center"
        android:text="已关注"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:background="@drawable/bg_corners_6_gray"
        android:layout_width="64dp"
        android:layout_height="26dp" />

</androidx.constraintlayout.widget.ConstraintLayout>