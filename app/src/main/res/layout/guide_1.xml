<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingTop="@dimen/status_bar_height"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:text="鸟哥笔记"
            android:textSize="40sp"
            android:textColor="@color/text_first_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <TextView
            android:text="营销人都在看"
            android:textSize="18sp"
            android:textColor="@color/text_first_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="11dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_marginBottom="6dp"
                android:layout_marginTop="55dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/image1"
                android:src="@mipmap/icon_fenxiang"
                android:layout_width="88dp"
                android:layout_height="88dp"
                tools:ignore="MissingConstraints" />


            <TextView
                android:id="@+id/text1"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="14dp"
                app:layout_constraintTop_toTopOf="@+id/image1"
                app:layout_constraintLeft_toRightOf="@+id/image1"
                android:text="找人"
                android:textSize="14.4sp"
                android:textColor="@color/text_first_color"
                android:background="@drawable/bg_round"
                android:gravity="center"
                android:layout_width="80dp"
                android:layout_height="80dp" />


            <TextView
                android:id="@+id/text2"
                android:layout_marginRight="7dp"
                android:layout_marginBottom="5dp"
                app:layout_constraintBottom_toBottomOf="@+id/image1"
                app:layout_constraintRight_toLeftOf="@+id/image1"
                android:text="职业认证"
                android:textSize="19.8sp"
                android:textColor="@color/text_first_color"
                android:background="@drawable/bg_round"
                android:gravity="center"
                android:layout_width="110dp"
                android:layout_height="110dp" />

            <TextView
                android:id="@+id/text3"
                app:layout_constraintTop_toBottomOf="@+id/image1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:gravity="center"
                android:text="王雨晨"
                android:textSize="15.84sp"
                android:textColor="@color/text_first_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/text4"
                app:layout_constraintTop_toBottomOf="@+id/text3"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:gravity="center"
                android:lineSpacingExtra="2dp"
                android:textSize="11.88sp"
                android:text="上海青墨网络科技有限公司"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:id="@+id/text5"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/text4"
                app:layout_constraintLeft_toLeftOf="@id/image1"
                android:background="@drawable/bg_round"
                android:layout_width="28dp"
                android:layout_height="28dp" />

            <TextView
                android:id="@+id/text11"
                android:layout_marginTop="6dp"
                app:layout_constraintRight_toRightOf="@+id/text5"
                app:layout_constraintTop_toBottomOf="@+id/text5"
                android:text="圈子"
                android:textSize="14.4sp"
                android:textColor="@color/text_first_color"
                android:background="@drawable/bg_round"
                android:gravity="center"
                android:layout_width="96dp"
                android:layout_height="96dp" />

            <View
                android:id="@+id/text13"
                android:layout_marginLeft="65dp"
                app:layout_constraintTop_toBottomOf="@+id/text11"
                app:layout_constraintLeft_toRightOf="@+id/text11"
                android:background="@drawable/bg_round"
                android:layout_width="42dp"
                android:layout_height="42dp" />


            <TextView
                android:id="@+id/text12"
                app:layout_constraintTop_toBottomOf="@+id/text11"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:text="学院"
                android:textSize="14.4sp"
                android:textColor="@color/text_first_color"
                android:background="@drawable/bg_round"
                android:gravity="center"
                android:layout_width="64dp"
                android:layout_height="64dp" />


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_marginLeft="4dp"
                android:layout_marginTop="9dp"
                app:layout_constraintLeft_toLeftOf="@id/text2"
                app:layout_constraintTop_toBottomOf="@+id/text2"
                android:id="@+id/image2"
                android:src="@mipmap/icon_fenxiang"
                android:layout_width="64dp"
                android:layout_height="64dp"
                tools:ignore="MissingConstraints" />


            <TextView
                android:id="@+id/text9"
                app:layout_constraintTop_toBottomOf="@+id/image2"
                app:layout_constraintLeft_toLeftOf="@+id/image2"
                app:layout_constraintRight_toRightOf="@+id/image2"
                android:gravity="center"
                android:lineSpacingExtra="2dp"
                android:text="张俊杰"
                android:textSize="11.52sp"
                android:textColor="@color/text_first_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/text10"
                app:layout_constraintTop_toBottomOf="@+id/text9"
                app:layout_constraintLeft_toLeftOf="@+id/image2"
                app:layout_constraintRight_toRightOf="@+id/image2"
                android:gravity="center"
                android:lineSpacingExtra="2dp"
                android:textSize="8.64sp"
                android:text="产品经理"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <de.hdodenhof.circleimageview.CircleImageView
                app:layout_constraintLeft_toRightOf="@id/text5"
                app:layout_constraintTop_toTopOf="@+id/text5"
                android:layout_marginLeft="14dp"
                android:id="@+id/image3"
                android:src="@mipmap/icon_fenxiang"
                android:layout_width="71dp"
                android:layout_height="71dp"
                tools:ignore="MissingConstraints" />


            <TextView
                android:id="@+id/text6"
                android:layout_marginLeft="9dp"
                android:layout_marginBottom="9dp"
                app:layout_constraintBottom_toBottomOf="@+id/image3"
                app:layout_constraintLeft_toRightOf="@+id/image3"
                android:text="干货"
                android:textSize="14.4sp"
                android:textColor="@color/text_first_color"
                android:background="@drawable/bg_round"
                android:gravity="center"
                android:layout_width="80dp"
                android:layout_height="80dp" />


            <TextView
                android:id="@+id/text7"
                app:layout_constraintTop_toBottomOf="@+id/image3"
                app:layout_constraintLeft_toLeftOf="@+id/image3"
                app:layout_constraintRight_toRightOf="@+id/image3"
                android:gravity="center"
                android:lineSpacingExtra="2dp"
                android:text="豆少华"
                android:textSize="12.67sp"
                android:textColor="@color/text_first_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/text8"
                app:layout_constraintTop_toBottomOf="@+id/text7"
                app:layout_constraintLeft_toLeftOf="@+id/image3"
                app:layout_constraintRight_toRightOf="@+id/image3"
                android:gravity="center"
                android:lineSpacingExtra="2dp"
                android:textSize="9.5sp"
                android:text="产品运营"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>



</LinearLayout>
