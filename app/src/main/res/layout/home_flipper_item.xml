<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/part1"
        android:gravity="center|left"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dingzhi"
            android:visibility="gone"
            android:src="@mipmap/icon_flash_dingzhi"
            android:layout_marginRight="7dp"
            android:layout_width="32dp"
            android:layout_height="16dp" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="腾讯倒闭啦！"
            android:textColor="@color/text_first_color"
            android:textSize="17sp" />



    </LinearLayout>


    <TextView
        android:layout_marginTop="6dp"
        android:layout_below="@+id/part1"
        android:layout_above="@+id/one_img_time"
        android:id="@+id/home_news_text"
        android:gravity="left|top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:lineSpacingExtra="2dp"
        android:ellipsize="end"
        android:text="IDC：阿里、腾讯、中国电信、金山云跻身2018年全球十大IaaS服务商
金山云跻身2018年全球十大IaaS服务商
金山云跻身2018年全球十大IaaS服务商
金山云跻身2018年全球十大IaaS服务商
金山云跻身2018年全球十大IaaS服务商"
        android:textColor="#242629"
        android:textSize="13sp"
        />



    <TextView
        android:id="@+id/one_img_time"
        android:layout_alignParentBottom="true"
        android:gravity="center|left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2019.9.23"
        android:textColor="@color/text_second_color"
        android:textSize="11sp" />

</RelativeLayout>