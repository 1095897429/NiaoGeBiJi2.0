<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:textColor="@color/text_news_title_color"
            android:textSize="16sp"
            android:text="阅读一篇文章"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/title_tag"
            android:layout_below="@+id/title"
            android:textColor="@color/text_news_tag_color"
            android:layout_marginTop="8dp"
            android:textSize="13sp"
            android:text="2019/07/07"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/part2"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">




            <TextView
                android:id="@+id/account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FA541C"
                android:text="+300"
                android:singleLine="true"
                android:textSize="22sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/text_feather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FA541C"
                android:layout_marginLeft="10dp"
                android:text="羽毛"
                android:singleLine="true"
                android:textSize="13sp"
                android:visibility="visible" />

        </LinearLayout>



        <RelativeLayout
            android:id="@+id/part3333"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/more_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="详情"
                android:textColor="#97B0BF"
                android:singleLine="true"
                android:textSize="13sp"
                android:visibility="visible" />


            <ImageView
                android:layout_toRightOf="@+id/more_detail"
                android:src="@mipmap/icon_my_right"
                android:layout_marginLeft="4dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:tint="#97B0BF"
                android:layout_width="12dp"
                android:layout_height="12dp" />

        </RelativeLayout>

    </LinearLayout>


    <View
        android:layout_alignParentBottom="true"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_line"/>

</RelativeLayout>