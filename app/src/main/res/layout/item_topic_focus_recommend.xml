<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="105dp"
            android:layout_height="138dp">

            <com.qmkj.niaogebiji.module.widget.RCImageView
                android:id="@+id/one_img"
                android:visibility="visible"
                android:layout_width="105dp"
                android:layout_height="138dp"
                android:scaleType="centerCrop"
                app:round_as_circle="false"
                app:round_corner="12dp" />


            <TextView
                android:id="@+id/topic_titile"
                android:layout_above="@+id/ll_focus"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:text="#我要找资源"
                android:maxLines="2"
                android:ellipsize="end"
                android:gravity="center|left"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/ll_focus"
                android:visibility="visible"
                android:gravity="center"
                android:layout_width="52dp"
                android:layout_height="22dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/focus"
                    android:visibility="gone"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    android:gravity="center"
                    android:text="关注 + "
                    android:background="@drawable/bg_corners_12_40_white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/focus_aleady"
                    android:text="已关注"
                    android:visibility="visible"
                    android:gravity="center"
                    android:textSize="11sp"
                    android:background="@drawable/bg_corners_12_40_white"
                    android:textColor="@color/text_first_color"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

        </RelativeLayout>




    </RelativeLayout>

    <Space
        android:layout_width="8dp"
        android:layout_height="match_parent" />




</LinearLayout>