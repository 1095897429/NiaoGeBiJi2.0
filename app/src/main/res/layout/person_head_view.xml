<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/rl_top_part"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/ll_head"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/head_icon"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@mipmap/icon_head_default"/>


            <LinearLayout
                android:layout_marginLeft="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignTop="@+id/head_icon"
                android:layout_toRightOf="@+id/head_icon"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                       <LinearLayout
                           android:layout_width="wrap_content"
                           android:layout_height="match_parent"
                           android:gravity="center"
                           android:orientation="horizontal">

                           <TextView
                               android:id="@+id/sender_name"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:ellipsize="end"
                               android:lineSpacingExtra="2dp"
                               android:maxLines="1"
                               android:text="小羽毛"
                               android:textColor="@color/text_first_color"
                               android:textSize="22sp" />
                           
                           <ImageView
                               android:id="@+id/id_auther"
                               android:layout_marginLeft="8dp"
                               android:src="@mipmap/icon_auther_shenfen"
                               android:layout_width="51dp"
                               android:layout_height="51dp" />

                           <ImageView
                               android:id="@+id/id_profession"
                               android:layout_marginLeft="8dp"
                               android:src="@mipmap/icon_authen_company1"
                               android:layout_width="51dp"
                               android:layout_height="51dp" />
                           
                       </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="4dp" />


                <TextView
                    android:id="@+id/sender_tag"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lineSpacingExtra="2dp"
                    android:maxLines="1"
                    android:text="上海青墨网络科技有限公司 铲平经理"
                    android:textColor="@color/text_first_color"
                    android:textSize="13sp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <!--<include layout="@layout/layout_vertify"></include>-->


                <TextView
                    android:visibility="visible"
                    android:autoLink="all"
                    android:id="@+id/sender_not_verticity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lineSpacingExtra="2dp"
                    android:maxLines="1"
                    android:text="立即职业认证"
                    android:textColor="#FFBA20"
                    android:textSize="13sp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <LinearLayout
                    android:id="@+id/ll_badge"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                </LinearLayout>

                <Space
                    android:layout_width="8dp"
                    android:layout_height="match_parent" />


                <TextView
                    android:id="@+id/user_des"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lineSpacingExtra="2dp"
                    android:text="@string/author_desc"
                    android:textColor="@color/text_second_color"
                    android:textSize="13sp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:gravity="center"
                        android:id="@+id/part1111_1"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/send_article_num"
                            android:text="0"
                            android:layout_gravity="left"
                            android:textSize="18sp"
                            android:textColor="@color/text_first_color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="2dp" />

                        <TextView
                            android:text="关注TA的"
                            android:textSize="11sp"
                            android:textColor="#AAAEB3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />


                    </LinearLayout>

                    <Space
                        android:layout_width="32dp"
                        android:layout_height="match_parent" />

                    <LinearLayout
                        android:gravity="center"
                        android:id="@+id/part2222_2"
                        android:layout_toRightOf="@+id/part1111_1"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/medal_count"
                            android:text="0"
                            android:layout_gravity="left"
                            android:textSize="18sp"
                            android:textColor="@color/text_first_color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="2dp" />

                        <TextView
                            android:text="圈子被关注"
                            android:textSize="11sp"
                            android:layout_gravity="left"
                            android:textColor="#AAAEB3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />


                    </LinearLayout>

                </LinearLayout>





            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/bg_color"/>


    <RelativeLayout
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="115dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_centerVertical="true"
            android:id="@+id/head_author_icon"
            android:layout_width="59dp"
            android:layout_height="59dp"
            android:src="@mipmap/icon_head_default"/>


        <LinearLayout
            android:layout_alignTop="@+id/head_author_icon"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            android:layout_toRightOf="@+id/head_author_icon"
            android:layout_toLeftOf="@+id/part1111_3"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

          <LinearLayout
              android:layout_marginTop="2dp"
              android:gravity="center|left"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

              <TextView
                  android:id="@+id/author_name"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:ellipsize="end"
                  android:lineSpacingExtra="2dp"
                  android:maxLines="1"
                  android:text="小羽毛"
                  android:textColor="@color/text_first_color"
                  android:textSize="16sp" />
              
              <ImageView
                  android:id="@+id/author_type"
                  android:layout_marginLeft="10dp"
                  android:src="@mipmap/hot_author_professor"
                  android:layout_width="60dp"
                  android:layout_height="18dp" />
              
          </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp" />

            <TextView
                android:id="@+id/author_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="2dp"
                android:text="这里是三节课联合创始人老黄的专栏，介绍完了。"
                android:textColor="@color/text_second_color"
                android:textSize="13sp" />

        </LinearLayout>


        <LinearLayout
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:id="@+id/part1111_3"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/hint_num"
                android:text="1400w"
                android:layout_gravity="left"
                android:textSize="17sp"
                android:textColor="@color/text_first_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="2dp" />

            <TextView
                android:text="影响力"
                android:textSize="11sp"
                android:textColor="#AAAEB3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/bg_color"/>

</LinearLayout>