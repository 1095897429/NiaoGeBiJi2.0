<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="108dp">


        <com.qmkj.niaogebiji.module.widget.RCImageView
            android:id="@+id/img_1"
            android:layout_width="109dp"
            android:layout_height="84dp"
            android:src="@mipmap/icon_fenxiang"
            android:scaleType="centerCrop"
            app:round_as_circle="false"
            app:round_corner="8dp" />


        <TextView
            android:id="@+id/content"
            android:textSize="17sp"
            android:lineSpacingExtra="2dp"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/img_1"
            android:textColor="@color/text_news_title_color"
            android:text="流量攻坚战 • 鸟哥笔记APP推广公开课|北京/广州/杭州/上海"
            android:maxLines="2"
            android:textStyle="bold"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:layout_marginLeft="8dp"
            android:gravity="center|left"
            android:layout_toRightOf="@+id/img_1"
            android:layout_alignBottom="@+id/img_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/money_tag"
                android:textSize="16sp"
                android:textColor="#FF5040"
                android:text="¥"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/money"
                android:textSize="22sp"
                android:layout_marginLeft="4dp"
                android:textColor="#FF5040"
                android:text="300"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/tag"
                android:textSize="11sp"
                android:layout_marginLeft="12dp"
                android:textColor="#AAAEB3"
                android:text="30212人学习"
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>



    </RelativeLayout>







</LinearLayout>