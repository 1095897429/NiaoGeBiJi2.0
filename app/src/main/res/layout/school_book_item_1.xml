<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="108dp">


        <com.qmkj.niaogebiji.module.widget.RCImageView
            android:id="@+id/img_1"
            android:layout_width="109dp"
            android:layout_height="84dp"
            android:background="@color/bg_color"
            android:scaleType="centerCrop"
            app:round_as_circle="false"
            app:round_corner="8dp" />


        <TextView
            android:id="@+id/content"
            android:textSize="17sp"
            android:lineSpacingExtra="2dp"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/img_1"
            android:textColor="@color/text_news_title_color"
            android:text=""
            android:maxLines="2"
            android:textStyle="bold"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



        <LinearLayout
            android:layout_marginLeft="8dp"
            android:gravity="center|left"
            android:layout_toRightOf="@+id/img_1"
            android:layout_alignBottom="@+id/img_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/money"
                android:textSize="18sp"
                android:textColor="#FF5040"
                android:layout_centerVertical="true"
                android:text="300"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Space
                android:layout_width="4dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/money_tag"
                android:textSize="11sp"
                android:textColor="#FF5040"
                android:layout_marginLeft="4dp"
                android:text="羽毛"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />


            <TextView
                android:id="@+id/tag"
                android:textSize="11sp"
                android:layout_marginLeft="12dp"
                android:textColor="#AAAEB3"
                android:text=""
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>



    </RelativeLayout>







</LinearLayout>