<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/part1111"
        android:background="@drawable/bg_corners_8_gray"
        android:layout_width="99dp"
        android:orientation="vertical"
        android:paddingTop="15dp"
        android:paddingLeft="10dp"
        android:layout_height="84dp">

        <TextView
            android:id="@+id/test_title"
            android:text="做8题送价值1988元VIP"
            android:paddingRight="10dp"
            android:textColor="@color/text_first_color"
            android:textSize="13sp"
            android:layout_width="88dp"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:paddingRight="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:background="@drawable/bg_corners_3_red"
                android:layout_centerVertical="true"
                android:id="@+id/test_time"
                android:text="限时"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="9sp"
                android:layout_width="28dp"
                android:layout_height="16dp" />

            <ImageView
                android:background="@color/bg_color"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="3dp"
                android:id="@+id/test_img"
                android:layout_width="30dp"
                android:layout_height="32dp" />

        </RelativeLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp" />
    
</LinearLayout>