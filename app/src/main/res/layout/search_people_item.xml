<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/part1111"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/head_icon"
            android:layout_centerVertical="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/icon_head_default"/>

        <LinearLayout
            android:layout_marginLeft="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignTop="@+id/head_icon"
            android:layout_toRightOf="@+id/head_icon"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/sender_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:lineSpacingExtra="2dp"
                        android:maxLines="1"
                        android:text=""
                        android:textColor="@color/text_first_color"
                        android:textSize="16sp" />

                    <Space
                        android:layout_width="8dp"
                        android:layout_height="match_parent" />


                    <LinearLayout
                        android:id="@+id/ll_badge"
                        android:layout_marginLeft="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">


                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="4dp" />


            <TextView
                android:id="@+id/sender_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lineSpacingExtra="2dp"
                android:maxLines="1"
                android:text=""
                android:textColor="#AAAEB3"
                android:textSize="13sp" />


        </LinearLayout>

        <TextView
            android:id="@+id/focus"
            android:textColor="@color/text_news_title_color"
            android:textSize="13sp"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="关注"
            android:textStyle="bold"
            android:paddingLeft="21dp"
            android:paddingRight="21dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:background="@drawable/bg_corners_8_yellow"
            android:layout_width="70dp"
            android:layout_height="34dp" />


        <TextView
            android:id="@+id/already_focus"
            android:textColor="@color/text_news_title_color"
            android:textSize="13sp"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="已关注"
            android:textStyle="bold"
            android:paddingLeft="21dp"
            android:paddingRight="21dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:background="@drawable/bg_corners_8_gray"
            android:layout_width="85dp"
            android:layout_height="34dp" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_line"/>

</LinearLayout>